        android:icon="@drawable/smart_logo"
        android:label="스마트 캐리어"
        android:roundIcon="@drawable/smart_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Add_Closet" />
        <activity android:name=".Style" />
        <activity android:name=".Search" />
        <activity android:name=".Closet" />
        <activity android:name=".ClosetMain" />
        <activity android:name=".Add_New" />
